<?xml version="1.0" encoding="UTF-8"?>
<rdf:RDF
        xmlns:foaf="http://xmlns.com/foaf/0.1/"
        xmlns:dct="http://purl.org/dc/terms/"
        xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
        xmlns:dcat="http://www.w3.org/ns/dcat#"
>
    <dcat:Catalog th:each="catalog : ${categories}">
        <dct:title th:text="${catalog.title}"></dct:title>
        <dct:description th:text="${catalog.desc}"></dct:description>
        <dct:publisher th:if="${catalog.user != null}">
            <foaf:Person>
                <foaf:name th:text="${catalog.user.email}"></foaf:name>
            </foaf:Person>
        </dct:publisher>
        <dct:issued rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" th:text="${catalog.createdAt}"></dct:issued>
        <dct:modified rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" th:text="${catalog.updatedAt}"></dct:modified>

        <dcat:dataset>
            <dcat:Dataset th:each="dataset : ${catalog.datasets}">
                <dct:identifier th:text="${dataset.id}"></dct:identifier>
                <dct:title th:text="${dataset.title}">Example dataset 1</dct:title>
                <dct:description th:text="${dataset.desc}">A longer description of dataset 1: includes three distributions, a CSV file, a PDF file and an API. Some special characters: Θεσσαλονίκη.</dct:description>
                <dcat:keyword th:each="keyword : ${dataset.keywords}" th:text="${keyword.keyword}"></dcat:keyword>
                <dct:issued rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" th:text="${dataset.createdAt}"></dct:issued>
                <dct:modified rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" th:text="${dataset.updatedAt}"></dct:modified>

                <dcat:distribution>
                    <dcat:Distribution th:each="fd : ${dataset.fileData}">
                        <dct:title th:text="${fd.filename}"></dct:title>
                        <dcat:format th:text="${fd.ext}">text/html</dcat:format>
                        <dcat:byteSize th:text="${fd.bytes}">12323</dcat:byteSize>
                    </dcat:Distribution>
                </dcat:distribution>
            </dcat:Dataset>
        </dcat:dataset>
    </dcat:Catalog>
</rdf:RDF>